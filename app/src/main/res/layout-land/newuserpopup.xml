<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/newusericon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:srcCompat="@drawable/new_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

            <EditText
                android:id="@+id/newusername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:autofillHints=""
                android:gravity="center"
                android:hint="@string/enteruser"
                android:inputType="text"
                android:saveEnabled="true"
                android:textAlignment="center"
                android:textColorHint="#78909C"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/newpass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:autofillHints=""
                android:gravity="center"
                android:hint="@string/enterpass"
                android:inputType="text"
                android:saveEnabled="true"
                android:textAlignment="center"
                android:textColorHint="#78909C"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/newpassword2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:hint="@string/enterpassa"
                android:inputType="text"
                android:saveEnabled="true"
                android:textAlignment="center"
                android:textColorHint="#78909C"
                android:textSize="24sp"
                android:autofillHints="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center">

                <Button
                    android:id="@+id/cancelUserButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"/>

                <Button
                    android:id="@+id/createNewButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newuser"
                    android:layout_weight="1"/>


            </LinearLayout>

    </LinearLayout>








</LinearLayout>