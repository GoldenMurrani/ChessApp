<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/startpopupicon"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="5"
        app:srcCompat="@drawable/chess_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/startpopup_p_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/p1name"
            android:inputType="text"
            android:saveEnabled="true"
            android:textAlignment="center"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/startpopup_p_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/p2name"
            android:inputType="text"
            android:saveEnabled="true"
            android:textAlignment="center"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            android:autofillHints="" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startmatch"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>